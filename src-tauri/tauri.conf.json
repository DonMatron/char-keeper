{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "dnd-helper-tauri",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "dotnet build src-dotnet/src-dotnet.sln && npm run dev",
    "beforeBuildCommand": "dotnet build -c Release src-dotnet/src-dotnet.sln && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "D&D Helper",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
