{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CharKeeper",
  "version": "0.1.0",
  "identifier": "CharKeeper",
  "build": {
    "frontendDist": "../output/vue",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "dotnet build src-dotnet/src-dotnet.sln && npm run dev",
    "beforeBuildCommand": "dotnet build -c Release src-dotnet/src-dotnet.sln && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Char Keeper",
        "width": 800,
        "height": 600,
        "backgroundColor": "#0a090f",
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "../public/32x32.png",
      "../public/128x128.png",
      "../public/128x128@2x.png",
      "../public/icon.ico"
    ],
    "resources": [
      "dotnet"
    ]
  }
}
